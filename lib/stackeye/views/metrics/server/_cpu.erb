<div class="card">
  <div class="card-header">
    <div class="row align-items-center">
      <div class="col">
        <h4 class="card-header-title">
          <span class="fe fe-cpu"></span>
          CPU
        </h4>
      </div>
      <div class="col-auto">
        <ul class="nav nav-tabs nav-tabs-sm card-header-tabs">
          <li class="nav-item" data-toggle="chart" data-type="time" data-target="cpuChart" data-metrics="<%= @metrics.pluck('cpu_load_1m') %>" data-mean="<%= @metrics.mean('cpu_load_1m').round(1) %>" data-timestamps="<%= @metrics.pluck('timestamp') %>">
            <a class="nav-link active" href="#" data-toggle="tab">
              1m loadavg
            </a>
          </li>
          <li class="nav-item" data-toggle="chart" data-type="time" data-target="cpuChart" data-metrics="<%= @metrics.pluck('cpu_utilization') %>" data-mean="<%= @metrics.mean('cpu_utilization').round(2) %>" data-timestamps="<%= @metrics.pluck('timestamp') %>">
            <a class="nav-link" href="#" data-toggle="tab">
              Utilization
            </a>
          </li>
        </ul>
      </div>
    </div>
  </div>
  <div class="card-body">
    <div class="chart">
      <canvas id="cpuChart" class="chart-canvas chartjs-render-monitor" width="1816" height="600" style="display: block; height: 300px; width: 908px;"></canvas>
    </div>
  </div>
  <ul class="card-footer card-chart-footer">
    <% { primary: "Metric", black: "Average" }.each do |color, label| %>
      <li>
        <span class="text-<%= color %>">‚óè</span>
        <%= label %>
      </li>
    <% end %>
  </ul>
</div>

<% %w[cpu_load_1m cpu_utilization].each_with_index do |metric, i| %>
  <div class="row <%= :hidden unless i.zero? %>">
    <% %w[mean median mode range].each do |action| %>
      <div class="col-12 col-lg-6 col-xl">
        <div class="card">
          <div class="card-body">
            <div class="row align-items-center">
              <div class="col">
                <h6 class="card-title text-uppercase text-muted mb-2">
                  <%= metric.tr('_', ' ') %>
                  <%= action.tr('_', ' ') %>
                </h6>
                <span class="h2 mb-0">
                  <%= @metrics.send(action, 'cpu_load_1m').round(1) %>
                </span>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
